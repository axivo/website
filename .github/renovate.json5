{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["fmunteanu"],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.+)$",
      "fileMatch": ["go.mod"],
      "matchStrings": ["module[\\s\\S]+?go\\s+(?<currentValue>.+)"],
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)$"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gohugoio/hugo",
      "extractVersionTemplate": "^v(?<version>.+)$",
      "fileMatch": [".github/workflows/deploy.yml", "docs/hugo.yaml"],
      "matchStrings": [
        "hugo-version:\\s+(?<currentValue>.+)",
        "hugoVersion:[\\s\\S]+?min:\\s+(?<currentValue>.+)"
      ]
    }
  ],
  "extends": [":semanticCommitTypeAll(chore)", "config:recommended"],
  "gitIgnoredAuthors": ["41898282+github-actions[bot]@users.noreply.github.com"],
  "labels": ["dependency"],
  "packageRules": [
    {
      "enabled": true,
      "matchDepTypes": ["direct", "indirect"],
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy"]
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "separateMajorMinor": false,
  "separateMinorPatch": false
}
