{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["fmunteanu"],
  "customManagers": [
    {
      "customType": "regex",
      "datasource": "github-tags",
      "depName": "golang/go",
      "extractVersion": "^go(?<version>.+)$",
      "fileMatch": ["netlify.toml"],
      "matchStrings": ["GO_VERSION\\s*=\\s*\"(?<currentValue>.+)\""]
    },
    {
      "customType": "regex",
      "datasource": "github-releases",
      "depName": "gohugoio/hugo",
      "extractVersion": "^v(?<version>.+)$",
      "fileMatch": [".github/workflows/deploy.yml", "docs/hugo.yaml", "netlify.toml"],
      "matchStrings": [
        "hugo-version:\\s+(?<currentValue>.+)",
        "hugoVersion:[\\s\\S]+?min:\\s+(?<currentValue>.+)",
        "HUGO_VERSION[\\s\\S]+?\"(?<currentValue>.+)\""
      ]
    }
  ],
  "extends": [":semanticCommitTypeAll(chore)", "config:recommended"],
  "gitIgnoredAuthors": ["41898282+github-actions[bot]@users.noreply.github.com"],
  "labels": ["dependency"],
  "packageRules": [
    {
      "groupName": "dependency golang/go",
      "matchPackageNames": ["golang/go"],
      "rangeStrategy": "bump"
    },
    {
      "enabled": true,
      "matchDepTypes": ["require", "indirect"],
      "matchManagers": ["gomod"],
      "rangeStrategy": "increase"
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "separateMajorMinor": false,
  "separateMinorPatch": false
}
