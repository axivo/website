{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "fmunteanu"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "go",
      "managerFilePatterns": [
        "**/go.mod",
        "**/go.sum",
        ".github/workflows/*.yml"
      ],
      "matchStrings": [
        "go\\s+(?<currentValue>.+)",
        "with:[\\s\\S]+?go-version:\\s+(?<currentValue>.+)"
      ],
      "versioningTemplate": "go"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node",
      "managerFilePatterns": [
        ".github/workflows/checksums.yml",
        ".github/workflows/documentation.yml"
      ],
      "matchStrings": [
        "with:[\\s\\S]+?node-version:\\s+(?<currentValue>.+)"
      ],
      "versioningTemplate": "node"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gohugoio/hugo",
      "extractVersionTemplate": "^v(?<version>.+)$",
      "managerFilePatterns": [
        ".github/workflows/checksums.yml",
        ".github/workflows/documentation.yml",
        "docs/hugo.yaml",
        "k3s-cluster/hugo.yaml"
      ],
      "matchStrings": [
        "with:[\\s\\S]+?hugo-version:\\s+(?<currentValue>.+)",
        "hugoVersion:[\\s\\S]+?min:\\s+(?<currentValue>.+)"
      ]
    }
  ],
  "extends": [
    ":semanticCommitTypeAll(chore)",
    "config:recommended"
  ],
  "gitIgnoredAuthors": [
    "41898282+github-actions[bot]@users.noreply.github.com"
  ],
  "labels": [
    "dependency"
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "golang-version"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "enabled": true,
      "matchDatasources": [
        "node-version"
      ],
      "matchDepNames": [
        "node"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "enabled": true,
      "matchDepTypes": [
        "direct",
        "indirect"
      ],
      "matchManagers": [
        "gomod"
      ]
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "separateMajorMinor": false,
  "separateMinorPatch": false
}
